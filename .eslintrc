{
    "extends": ["airbnb", "plugin:react/recommended"],
    "plugins": [
        "prettier",
        "jest",
        "react"
    ],
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "jest": true,
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
    },
    "rules": {
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "indent": [
            "error",
            4,
            {
                "SwitchCase":1
            }
        ],
    }
}
